 
@model List<string>
@{
     // Layout = "Views_Shared_Layout.cshtml";    
    ViewData["Title"] = "add Admin";
}
                                                                                            

<div class="modal" id="confirmMsgModal" tabindex="-1" aria-labelledby="confirmMsgModalLabel" aria-hidden="true">
    <div class="modal-dialog">  
        <div class="modal-content"> 
            <div class="modal-header"> 
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirmation msg</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="text"> 
            </div> 
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a id="addBtn" class="btn btn-success">confirm add</a>
            </div>
        </div>
    </div>
</div>




<h1>Add Admin</h1>


<table class="table table-bordered table-hover">

    <tr>
        <th>Name</th>
        <th>Action</th>


    </tr>

    @for (int i = 0; i < Model.Count; i++) 
    {
        <tr style="justify-items:center">
            <td> @Model[i]</td>
            <td>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmMsgModal" onclick="MakeAdmin('@Model[i]')">
                    Make admin
                </button>
            </td>
        </tr>

    }



</table>

<a class="btn btn-success" href="/account/register?IsAdmin=true">Register new admin</a>

@section scripts {  
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/AddAdmin.js"></script>
}   
 